<% if(isLoggedin) {%>
    <%- include("../layouts/userheader.ejs") %>
    <% } else { %>
        <%- include("../layouts/guestHeader.ejs") %>
     <% } %>

<!-- Page Header Start -->
<div class="container-fluid bg-info mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="height: 15vh;">
        <h1 class="font-weight-semi-bold text-uppercase ">wishlist &nbsp;<img style="margin-bottom: 2vh;" src="\user\img\1x\1x\outline_favorite_black_48dp.png"></h1>
        <div class="d-inline-flex">
        </div>
    </div>
</div>
<!-- Page Header End -->

<!--wishlist start-->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Add To Cart</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    <% if(id) {%>
                    
                        <% for(let key of wishlistProducts.item) { %>
                    <tr>
                        <td class="align-middle"><img src="/banners/<%=key.productId.image[0]%>" alt="img" style="width: 50px;">&nbsp;<%= key.productId.name %></td>
                        <td class="align-middle">price: <%= key.productId.price %></td>
                        <td class="align-middle"><a href="/add-to-cart-delete-wishlist?id=<%= key.productId._id%>"><button class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-dark mr-1"></i>Add To Cart</button></a></td>
                        <td class="align-middle"><a href="/delete-wishlist?id=<%= key.productId._id%>"><button class="btn btn-sm btn-dark"><i class="fa fa-times"></i></button></a></td>
                    </tr>
                    <% } %>
                    <% } else { %>
                        productData not found
                        <% } %>

                </tbody>
            </table>
        </div>
    </div>
</div>


<%- include("../layouts/userfooter.ejs") %>