<%- include("../layouts/userheader.ejs") %>

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-12 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    

                    <tr>
                        <th>No</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                    <tbody class="align-middle">
                        <%  for(let i=0;i<order.products.item.length;i++) { %>
                        <tr style="color: black;"  >
                            
                         
                            <td class="align-middle"><%= i+1%></td>
                            <td class="align-middle"><img style="width: 50px; height: 50px;" src="/banners/<%= order.products.item[i].productId.image[0] %>" alt="">&nbsp;&nbsp;<%= order.products.item[i].productId.name %></td>
                            <td class="align-middle"><%= order.products.item[i].qty %></td>
                            <td class="align-middle"><%= order.products.item[i].price %></td>
                            <td>
                                <% if(order.status=='Delivered' ){ %>
                                    <% if(order.productReturned[i]){ %>
                                        <h5 class="btn btn-success ">Product Returned</h5>
                    <% } else {%>
                        <button class="btn btn-block btn-danger  "><a href="/cancelProduct?id=<%= order.products.item[i].productId._id%>" style="color: black;">Return Product</a></button>
                        <%  }} %>
                            </td>
                            
                            
                        </tr>
                        <%}%>
                        
                        
                    </tbody>
                </thead>
            </table>
           
            
            <br><br>
            <div class="col-lg-8">
                <!-- <form class="mb-5" action="">
                    <div class="input-group">
                        <input type="text" class="form-control p-4" placeholder="Coupon Code">
                        <div class="input-group-append">
                            <button class="btn btn-primary">Apply Coupon</button>
                        </div>
                    </div>
                </form> -->
                
                <div class="card border-secondary mb-5">
                    <button class="btn btn-block btn-danger  "><a href="/export-invoice-pdf?id=<%= order._id%>" style="color: black;">Download Invoice</a></button>
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Order Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Total:</h6><h6 class= "font-weight-medium"></h6>
                            <h6 class="font-weight-medium"><%= order.products.totalPrice %></h6>
                        </div>
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            
                            <h6 class="font-weight-medium">Discount:</h6><h6 class= "font-weight-medium"></h6>
                            <h6 class="font-weight-medium"><%= order.discount %></h6>
                            
                        </div>
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Invoice Number:</h6><h6 class= "font-weight-medium"></h6>
                            <h6 class="font-weight-medium"><%= order._id %></h6>
                        </div>
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Invoice Date:</h6><h6 class= "font-weight-medium"></h6>
                            <h6 class="font-weight-medium"><%= order.createdAt %></h6>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">Free</h6>
                        </div>
                    </div>
                    
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            
                            <h5 class="font-weight-bold">Total Paid</h5>
                            <h5 class="font-weight-bold"><%= order.amount  %></h5>
                        </div>

                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
                    

<%- include("../layouts/userfooter.ejs") %>