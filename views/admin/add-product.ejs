<%- include("../layouts/adminheader.ejs") %>
 
    
    <section>
        <div class="container mt-4">
            <div class="row">

                <div class="col-md-6">
                    <h2 class="text-center">Add Product</h2>

                    <% if(typeof message !=='undefined' ) { %>
                        <h4>
                            <%= message %>
                        </h4>
                        <% } %>
                            <form action="/admin/add-product" method="post" encType="multipart/form-data"> 

                                <!-- <label for="">Name</label> -->
                                 <div class="mb-4 form-floating">
                                <input type="text" name="name" class="form-control" placeholder="Product Name" required>
                                </div>

                                <div class="mb-4 form-floating">
                                    <select name="category" class="mb-4 form-control" id="floatingInput2" 
                                    placeholder="Product Category" required>
                                    <option value="" disabled selected>category</option>
                                    <% if(category.length>0 ) { %>
                                        <% for(let i=0;i<category.length;i++) { %>
                                            <% if(category[i].is_available === 0) { %>
                                            <option value="<%= category[i].name %>">
                                                <%=category[i].name %>
                                            </option>
                                            <% } %>

                                        <% } } else { %>
                                            <h4>No Categories Found</h4>
                                        
                                        <% } %>
                                    
                                    </select>
                                           
                                     
                                </div> 






                                <div class="mb-4 form-floating">
                                    <input type="text" name="price" class="form-control"  placeholder="price" required>
                                </div>
                            

                                <div class="mb-4 form-floating">
                                    <input type="text" name="description" class="form-control"  placeholder="Description" required>
                                </div>

                                <div img class="mb-4 form-floating" >
                                    <label for="floatingInput">Image</label>
                                    <input type="file" name="uploaded_file" class="form-control" id="formFileMultiple" accept="image/jpg, image/png, image/jpeg" multiple>
                                </div>

                                <button type="submit" class="btn btn-warning mt-4">Submit</button> 
                            </form> 
                        
                </div>
            </div>
        </div>

    </section> 
<% include("../layouts/adminfooter.ejs") %>