<%- include('../layouts/adminheader.ejs') %>

<!-- <div class="ex-form-1 mt-5 pt-5 pb-5"> -->
    
    <div class="container">
        <div class="col-xl-6 offset-xl-3">
            <div class="card" >
                <div class="card-title" style="display: flex; justify-content:center;">
                    <h3>Add Category</h3>
                </div>
                <hr>
                <% if(typeof message!=='undefined') { %>
                    <h4>
                        <p style="color:red;">
                            <%= message %>
                        </p>
                    </h4>
                    <% } %>
                    <form action="" method="post">
                        <div class="form group mb-3">
                            <input type="text" style="background-color:black; color: white;" class="form-control form-control-rounded" name="category"
                            id="input-7" placeholder="Enter Category Name" required>
                        </div>
                        <hr>
                        <div class="form-group">
                            <button value ="submit" class="btn btn-sm btn-round" style="color: black; font-weight: bolder; font-size: medium;"><i class="icon-arrow-right"></i>Add Category</button>
                            <a href="/admin/admin-category" class="btn btn-danger btn-round" style="color: black; font-weight: bolder; font-size: medium;">Category List</a>
                        </div>
                    </form>
            </div>
        </div>
    </div>

