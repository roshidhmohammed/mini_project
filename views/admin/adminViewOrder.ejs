<%- include('../layouts/adminheader.ejs') %>

<section>
    <div class="container">
      <div class="row mt-4 ">
        <h1 style="text-align: center;">User Name:<%= order.userId.name %></h1>
        <a href="/admin/adminOrder" class="btn btn-success ml-auto" >Add Product</a>
      </div>

    </div>

    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">product</th>
          <th scope="col">Quantity</th>
          <th scope="col">price</th>
          <th>Image</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        
          <% for(let i=0;i<order.products.item.length;i++) { %>
            <tr>
              <th scope="row"><%- i %></th>
              <td><%- products[i-1].name %></td>
              <td><%-  products[i-1].category %></td>
              <td><%-  products[i-1].description %></td>
              <td><img style="width: 50px; height: 50px;" src="/banners/<%=  products[i-1].image[0] %>" alt=""></td>
              <td>
                <% if( products[i-1].is_available===0) { %>
                  <button type="button" class="btn btn-"><a href="/admin/product-block?id=<%= products[i-1]._id%>"
                      style="color: black; text-decoration: none;" class="delete btn btn-outline-success"></a>show</button>
                  <br>
                  <% } else { %>
                    <button type="button" class="btn btn-"><a href="/admin/product-unblock?id=<%= products[i-1]._id%>"
                        style="color: green; text-decoration: none;" class="btn btn-outline-success"></a>hide</button>


                    <% } %>


              </td>

            </tr>
            <% } %>

            


      </tbody>
    </table>

    </div>




</section>
